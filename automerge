name: automerge
on:
  pull_request:
    types: [opened, synchronize, labeled, edited, ready_for_review]
    branches: [ "main" ]
  check_suite:
    types: [completed]
  workflow_run:
    workflows: [ "ci" ]
    types: [completed]

permissions:
  contents: write
  pull-requests: write
  checks: read
  statuses: read

jobs:
  auto-merge:
    runs-on: ubuntu-latest
    steps:
      - name: Auto-merge when checks pass
        uses: peter-evans/auto-merge@v3
        with:
          merge_method: squash
          author_associations: 'CONTRIBUTOR, MEMBER, OWNER, COLLABORATOR'
          allow_skip_ci: true
          blocking_labels: 'do-not-merge'
